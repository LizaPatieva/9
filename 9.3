#include <iostream> //Подключение библиотеки iostream
using namespace std;
int main() //Точка входа в программу
{
int K; //Задаем переменную K
int N; //Задаем переменную N
int day; //Задаем переменную day
cout <<"K="<<endl; //Выводим на экран
cin >>K; //Вводим значение K
cout <<"N="<<endl; //Выводим на экран
cin >>N; //Вводим значение N
day=(K+N-2)%7+1; //Вычисляем  остаток от целочисленного деления на 7, пн-вс это с 1 по 7 (поэтому и +1), +2 т.к. два диапазона 
cout <<"day="<<day; //Выводим на экран результат
return 0; //Возврат целочисленного значения перед завершением функции
}
