#include <iostream>; //Подключение библиотеки iostream
int main (void) //Точка входа в программу
{
  int year; //Задаем переменную year
  printf("year:"); //Выводим на экран
  scanf ("%i", &year); //Вводим значение переменной year
  printf("%i\n", ((year-1)/100)+1); //Выводим на экран номер столетия, +1, т.к., например, отчисление века идет с 0 года, а не с 100 г.
  return 0; //Возврат целочисленного значения перед завершением функции
}
