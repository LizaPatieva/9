#include <iostream> //Подключение библиотеки iostream
using namespace std;
int main(void) //Точка входа в программу
{
  int A, B, C, N, R; //Задаем переменные
  cout <<"A="<<endl; //Выводим на экран
  cin >>A; //Вводим значение A
  cout <<"B="<<endl; //Выводим на экран
  cin >>B; //Вводим значение B
  cout <<"C="<<endl; //Выводим на экран
  cin >>C; //Вводим значение C
  N=(A/C)*(B/C); // Рассчитываем количество размещенных квадратов
  R=A*B-N*C*C; //Находим площадь незанятой части треугольника
  cout <<"N="<<N<<endl; //Выводим на экран кол-во квадратов
  cout <<"R="<<R<<endl; //Выводим на экран площадь незанятой части 
  return 0; //Возврат целочисленного значения перед завершением функции
}
